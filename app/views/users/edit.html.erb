
<% provide :title,"Update account" %>

<h1 style="text-align:center">UPDATE</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		
		<% if @user.errors.any? %>
		  <div id="error_explanation">
		  <div class="alert alert-daner">
		The form contains <%=pluralize(@user.errors.count,"errors")%>.
		<div>
		<ul>
			<% @user.errors.full_messages.each do |mgs|%>
				<li> <%= mgs %><li>
			<%end%>
		</ul>
		</div>
		<%end%>

			<%= f.label :name %>
			<%= f.text_field :name,class: "form_for" %>
			<%= f.label :email %>
			<%= f.email_field :email,class: "form_for" %>
			<%= f.label :password %>
			<%= f.password_field :password,class: "form_for" %>
			<%= f.label :confirm_password %>
			<%= f.password_field :password_confirmation,class: "form_for" %>
			
			<%=f.submit "Save change", class: "btn btn-primary" %>
	<% end %>
</div>
</div> 
